@model IEnumerable<MvcModels.Models.Customer>

@{
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout.cshtml";
}

<p>
    @using (Html.BeginForm("Search"))
    {
    <p>
        חיפוש: @Html.TextBox("strCustomerName", null, new { @placeholder = "שם הלקוח" })
        @Html.TextBox("strCustomerId", null, new { @placeholder = "תעודת זהות" })
        @Html.TextBox("strCustomerAddress", null, new { @placeholder = "כתובת לקוח" })
        <input type="submit" value="חפש" />
    </p>
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
    </tr>
}

</table>
