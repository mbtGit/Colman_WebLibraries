@model MvcModels.Models.Customer

@{
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <br />
    <br />
    <div class="form-horizontal divTable">
        <h4>הוספת לקוח</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group tableRow">
            <div class="tableCol">
                @Html.EditorFor(model => model.Id)
                @Html.ValidationMessageFor(model => model.Id)
            </div>
            @Html.LabelFor(model => model.Id, new { @class = "tableCol" })
        </div>

        <div class="form-group tableRow">
            <div class="tableCol">
                @Html.EditorFor(model => model.FullName)
                @Html.ValidationMessageFor(model => model.FullName)
            </div>
            @Html.LabelFor(model => model.FullName, new { @class = "tableCol" })
        </div>

        <div class="form-group tableRow">
            <div class="tableCol">
                @Html.EditorFor(model => model.Address)
                @Html.ValidationMessageFor(model => model.Address)
            </div>
            @Html.LabelFor(model => model.Address, new { @class = "tableCol" })
        </div>

        <div class="form-group">
            <div class="tableButton">
                <input type="submit" value="הוסף" class="btn btn-default" />
            </div>
        </div>
    </div>
}