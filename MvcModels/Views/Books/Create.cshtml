@model MvcModels.Models.Book

@{
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm()) 

{
    @Html.AntiForgeryToken()
        <br />
        <br />
    <div class="form-horizontal divTable">
        <h4>הוספת ספר</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group tableRow">

            <div class="tableCol">
                @Html.EditorFor(model => model.Publisher)
                @Html.ValidationMessageFor(model => model.Publisher)
            </div>
            @Html.LabelFor(model => model.Publisher, new { @class = "tableCol" })
        </div>
        <div class="form-group tableRow">
            <div class="tableCol">
                @Html.DropDownListFor( model => model.BookWriter, new SelectList(ViewBag.Writers, "Id", "FullName"))
            </div>
            @Html.LabelFor(model => model.BookWriter, new { @class = "tableCol" })
        </div>
        <div class="form-group tableRow">

            <div class="tableCol">
                @Html.EditorFor(model => model.BookName)
                @Html.ValidationMessageFor(model => model.BookName)
            </div>
            @Html.LabelFor(model => model.BookName, new { @class = "tableCol" })
        </div>

        <div class="form-group tableRow">

            <div class="tableCol">
                @Html.EditorFor(model => model.Genre)
                @Html.ValidationMessageFor(model => model.Genre)
            </div>
            @Html.LabelFor(model => model.Genre, new { @class = "tableCol" })
        </div>

        <div class="form-group tableRow">

            <div class="tableCol">
                @Html.EditorFor(model => model.PublishYear)
                @Html.ValidationMessageFor(model => model.PublishYear)
            </div>
            @Html.LabelFor(model => model.PublishYear, new { @class = "tableCol" })
        </div>

        <div class="form-group tableRow">
            <div class="tableButton">
                <input type="submit" value="הוספה" class="btn btn-default" />
            </div>
        </div>
    </div>
}
